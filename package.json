{
  "name": "sqlite4",
  "version": "4.0.0",
  "description": "Secure embedded SQL database with encryption, access control, and enterprise features",
  "main": "src/sqlite4.js",
  "types": "src/index.d.ts",
  "bin": {
    "sqlite4": "src/sqlite4.js",
    "sqlite4-server": "src/server.js",
    "sqlite4-client": "src/client.js",
    "sqlite4-cli": "src/cli.js",
    "sqlite4-admin": "src/admin.js",
    "sqlite4-backup": "src/backup.js",
    "sqlite4-replication": "src/replication.js",
    "sqlite4-mgr": "macos/sqlite4-mgr"
  },
  "scripts": {
    "start": "node src/server.js",
    "server": "node src/server.js",
    "client": "node src/client.js",
    "cli": "node src/cli.js",
    "admin": "node src/admin.js",
    "backup": "node src/backup.js",
    "replication": "node src/replication.js",
    "test": "node -e \"const SQLite4 = require('./src/sqlite4.js'); const db = new SQLite4({dbPath: ':memory:'}); console.log(db.execute('CREATE TABLE test (id INTEGER PRIMARY KEY, name TEXT)').success ? 'CREATE: OK' : 'FAIL'); console.log(db.execute('INSERT INTO test (name) VALUES (\\'test\\')').success ? 'INSERT: OK' : 'FAIL'); console.log(db.execute('SELECT * FROM test').rowCount === 1 ? 'SELECT: OK' : 'FAIL');\"",
    "security-setup": "bash security-configs/setup-security.sh",
    "docs": "node scripts/generate-docs.js",
    "macos:install": "chmod +x macos/sqlite4-mgr && cp macos/sqlite4-mgr /usr/local/bin/",
    "macos:app": "node scripts/create-mac-app.js",
    "example:basic": "node examples/basic/basic-operations.js",
    "example:auth": "node examples/auth/auth0-oauth.js",
    "example:2fa": "node examples/auth/two-factor-auth.js",
    "example:replication": "node examples/replication/replication.js",
    "example:hosting": "node examples/admin/remote-hosting.js"
  },
